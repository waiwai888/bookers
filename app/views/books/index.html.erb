<p id="notice"></p>
<h1>Books</h1>
<table>
    <thead>
        
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <%= book.title %>
            <%= book.body %>
            <%= link_to "Show", book_path(book) %>
            <%= link_to "Edit", edit_book_path(book) %>
            <%= link_to "Destroy", book_path(book), method: :delete %>
        <% end %>
    </tbody>
</table>
<h2>New book</h2>
<%= form_with model:@book, url:'/books', local:true do |f| %>
    <h3>Title</h3>
    <%= f.text_field :title %>
    <h3>Body</h3>    
    <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
<% end %>