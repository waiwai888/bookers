<% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  
<% if book.errors.any? %>
  <%= book.errors.count %>件のエラーが発生しました
  <% book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<p>Title</p>
<%= @book.title %>
<p>Body</p>
<%= @book.body%>

<%= link_to "edit", edit_book_path(@book) %>
<%= link_to "destroy", books_path(@book) %>
<%= link_to "Back", books_path %>